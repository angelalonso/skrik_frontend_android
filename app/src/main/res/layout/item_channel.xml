<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:onClick="listviewClick"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_weight="1.01">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_tv"
                android:layout_width="367dp"
                android:layout_height="49dp"
                android:text="Message"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_above="@+id/timestamp_tv"
                android:layout_toRightOf="@+id/sender_tv"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

            <TextView
                android:id="@+id/timestamp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timestamp"
                android:textColor="#000"
                android:gravity="right"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:paddingRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/message_tv"
                android:layout_alignEnd="@+id/message_tv" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:gravity="right"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:paddingRight="4dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/timestamp_tv"
                android:layout_toStartOf="@+id/timestamp_tv"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="&lt;"
                android:id="@+id/sender_tv"
                android:linksClickable="false"
                android:layout_alignParentLeft="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@color/Black"
                android:textColor="@color/white"
                android:gravity="center_vertical" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>