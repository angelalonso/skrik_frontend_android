<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:onClick="gotoChannel"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_weight="1.01">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_search_tv"
                android:layout_width="367dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:text="User name"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/status_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="#000"
                android:gravity="right"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/username_search_tv"
                android:layout_alignEnd="@+id/username_search_tv"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User ID"
                android:id="@+id/userid_search_tv"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/status_search_tv"
                android:layout_alignEnd="@+id/status_search_tv" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>