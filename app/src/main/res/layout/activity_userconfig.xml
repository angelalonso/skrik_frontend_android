<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.afonseca.skrik.UserConfigActivity">

    <TextView android:text="@string/title_activity_user" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignRight="@+id/name_input"
        android:layout_alignEnd="@+id/name_input"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your name here"
        android:ems="10"
        android:id="@+id/name_input"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/save_btn"
        android:layout_alignEnd="@+id/save_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_below="@+id/name_input"
        android:layout_alignRight="@+id/name_input"
        android:layout_alignEnd="@+id/name_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Enter your e-Mail here" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/uid_input"
        android:editable="false"
        android:focusable="false"
        android:textColor="#77000000"
        android:layout_below="@+id/email_input"
        android:layout_alignLeft="@+id/email_input"
        android:layout_alignStart="@+id/email_input"
        android:layout_alignRight="@+id/email_input"
        android:layout_alignEnd="@+id/email_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/regid_input"
        android:editable="false"
        android:focusable="false"
        android:textColor="#77000000"
        android:layout_below="@+id/uid_input"
        android:layout_alignLeft="@+id/uid_input"
        android:layout_alignStart="@+id/uid_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwd_input"
        android:layout_below="@+id/regid_input"
        android:layout_alignLeft="@+id/regid_input"
        android:layout_alignStart="@+id/regid_input"
        android:layout_alignRight="@+id/regid_input"
        android:layout_alignEnd="@+id/regid_input"
        android:text="Add a Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/clear_input"
        android:layout_toEndOf="@+id/clear_input"
        android:onClick="saveUser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear_input"
        android:layout_alignTop="@+id/save_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clearUser" />

</RelativeLayout>
